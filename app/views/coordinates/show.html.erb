<%- model_class = Coordinate -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @coordinate.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @coordinate.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:east_utm) %>:</strong></dt>
  <dd><%= @coordinate.east_utm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:north_utm) %>:</strong></dt>
  <dd><%= @coordinate.north_utm %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lattitude) %>:</strong></dt>
  <dd><%= @coordinate.lattitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:longitude) %>:</strong></dt>
  <dd><%= @coordinate.longitude %></dd>
  <dt><strong><%= model_class.human_attribute_name(:time_zone) %>:</strong></dt>
  <dd><%= @coordinate.time_zone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:project_id) %>:</strong></dt>
  <dd><%= @coordinate.project_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              coordinates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_coordinate_path(@coordinate), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              coordinate_path(@coordinate),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
