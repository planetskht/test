
<% if @project.image_files.present? %>
	<div id="owl-demo" class="owl-carousel owl-theme">
		<% @project.image_files.each do |file| %>
	  		<div class="item"> 
	 <a href="#" class="pop"> <%= image_tag(file.attachment.url, height:"250", big_src:"#{file.attachment.url}")  %> </a>
	  		</div>
	  	<% end %>	
	</div>
<% end %>
<div class="modal fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">              
      <div class="modal-body">
      	<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <img src="" class="imagepreview" style="width: 100%;height: 500px;" >
      </div>
    </div>
  </div>
</div>
<% if @project.flash_file %>
	<div class="container">
	  <embed src="<%= @project.flash_file.attachment.url %>" width="700" height="500"/>
	</div> 
<% end %>